{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./src"]
    }
  },
  "include": [
    "./env.d.ts",
    "src/**/*",
    "../../vue-shim.d.ts"
  ],
  "exclude": ["node_modules"],
}
